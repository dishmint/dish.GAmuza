change = 0
dir = 1
function setup()
  ofSetCircleResolution(50)
end

function update()
  change = change + 1
  if change > (3*OUTPUT_W/4) or change < OUTPUT_W/4 then
    dir = dir * -1
  end
end

function draw()

  gaBackground(1.0 ,1.0)
  ofPushMatrix()
    ofSetColor(255, 99, 71)
    // ofTranslate(OUTPUT_W/2, OUTPUT_H/2, 0)
    ofCircle(OUTPUT_W/2, OUTPUT_H/2, (OUTPUT_W/4) - change)
  ofPopMatrix()
end
